@model Referees
@{
    ViewData["Title"] = "AddReferees";
}
<h3>Please enter your referees</h3>

<form method="post">
    <input asp-for="Id" hidden />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col pb-2">
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="JobTitle" class="col-sm-2 col-form-label">Job Title</label>
        <div class="col pb-2">
            <input type="text" asp-for="JobTitle" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Insitution" class="col-sm-2 col-form-label">Insitution</label>
        <div class="col pb-2">
            <input type="text" asp-for="Insitution" />
            <span asp-validation-for="Insitution" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Cell" class="col-sm-2 col-form-label">Cell</label>
        <div class="col pb-2">
            <input type="tel" asp-for="Cell" pattern="[0][0-9]{9}" />
            <span asp-validation-for="Cell" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col pb-2">
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success" asp-action="UpdateReferees" style="width:150px">Save</button>
</form>
