@page
@model RegisterModel


<div class="row center-container">
    <div class="col-md-7">
        <h1>Register</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <br />

            <div class="mb-3 form-group row">
                <label asp-for="Input.Title" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.Title" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
            </div>


            <div class="mb-3 form-group row">
                <label asp-for="Input.FirstName" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label asp-for="Input.LastName" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label asp-for="Input.Telephone" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.Telephone" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label asp-for="Input.Cellphone" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.Cellphone" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Cellphone" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 form-group row">
                <label class="col-sm-2 col-form-label">What are you?</label>
                <div class="col-5">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class=form-select>
                        <option disabled selected></option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
            </div>


            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
